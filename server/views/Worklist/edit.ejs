<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1>To Do List</h1>

      <form class="form" method="POST">
        <div class="form-group">
          <label for="nameTextField">task title</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter the Title"
            name="Name"
            value="<%= Worklist.Name %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="PriorityTextField">Priority</label>
          <input
            type="text"
            class="form-control"
            id="PriorityTextField"
            placeholder="Priority"
            name="Priority"
            value="<%= Worklist.Priority %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="NotesTextArea">Notes</label>
          <textarea
            type="text"
            class="form-control"
            id="NotesTextArea"
            placeholder="Enter the Your Notes"
            name="Notes"
            required
          >
<%= Worklist.Notes %></textarea
          >
        </div>

        <button class="btn btn-Light" type="submit">Submit</button>

        <a href="/bio_Worklist" class="btn btn-Dark">Cancel</a>
      </form>
    </div>
  </div>
</div>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
